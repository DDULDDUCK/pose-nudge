{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pose Nudge",
  "version": "1.0.1",
  "identifier": "com.dduldduck.pose-nudge",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pose Nudge - 자세 교정 도우미",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost; media-src 'self' blob: data: mediastream:; connect-src 'self' ws://localhost:1430 ws://127.0.0.1:1430; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
        
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../models",
      "../locales"
    ],
    "createUpdaterArtifacts": true,
    "macOS": {
      "entitlements": "./Entitlements.plist"
    }
  },
  "plugins": {
    "fs": {},
    "sql": {
      "preload": ["sqlite:posture_data.db"]
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFGMDlDMDJDODcxRDgyOEIKUldTTGdoMkhMTUFKci9Hc296TXJvdSt0Mlp6WFlMYVV1M0hCaXVRVm5ublpIYUxLeEd1R3M0cVEK",
      "endpoints": [
        "https://github.com/dduldduck/pose-nudge/releases/latest/download/latest.json"
      ]
    }
  }
}
